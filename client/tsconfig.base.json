{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": false,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["es2017", "es2022", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@equinor/portal-client": ["packages/portal-client/src/index.ts"],
			"@equinor/portal-core": ["packages/portal-core/src/index.ts"],
			"@equinor/portal-modules": ["packages/portal-modules/src/index.ts"],
			"@equinor/portal-pages": ["packages/portal-pages/src/index.ts"],
			"@equinor/portal-ui": ["packages/portal-ui/src/index.ts"],
			"@equinor/portal-utils": ["packages/portal-utils/src/index.ts"],
			"@equinor/service-message": ["packages/service-message/src/index.ts"],
			"@equinor/notification": ["packages/notification/src/index.ts"]
		}
	},
	"include": ["dompurify.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", "tmp", "dist", "**.test.ts", "**.test.tsx"]
}
