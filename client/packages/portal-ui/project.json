{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/portal-ui/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/portal-ui",
        "main": "packages/portal-ui/src/index.ts",
        "tsConfig": "packages/portal-ui/tsconfig.lib.json",
        "assets": [
          "packages/portal-ui/*.md"
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/portal-ui/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/packages/portal-ui"
      ],
      "options": {
        "jestConfig": "packages/portal-ui/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}